<h1>Agregarle otra materia prima a: <%=@articulo.articuloreferencia%></h1>


<% form_for(:materiasprima, @materiasprima, :url => articulo_materiasprimas_path(@articulo)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :material %><br />
    <%= f.text_field :material %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articulo_materiasprimas_path %>