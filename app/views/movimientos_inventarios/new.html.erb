<h1>New movimientos_inventario</h1>

<% form_for(@movimientos_inventario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cantidad %><br />
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.label :fecha %><br />
    <%= f.datetime_select :fecha %>
  </p>
  <p>
     <b>Tipo de Movimiento</b><br />
     <select id="movimientos_inventario_tipos_movimiento_id" name="movimientos_inventario[tipos_movimiento_id]">
         <%= options_from_collection_for_select(@tipos_movimientos, "id", "descripcion", @movimientos_inventario.tipos_movimiento_id ) %>
     </select>

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', movimientos_inventarios_path %>