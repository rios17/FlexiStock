       <a href="/proveedores/new"
          onclick="return GB_showCenter('Nuevo Proveedor', this.href,300, 700)">
              <%= image_tag('nuevo_proveedor.png', {:border=>0,:width=>150,:heigth=>30,:title => "Nuevo Proveedor" })%></a>
    </td>